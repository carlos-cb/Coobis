{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>User detail</h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('homepage') }}">Home</a></li>
            <li><a href="{{ path('user_index') }}">User list</a></li>
            <li class="active">User detail</li>
        </ol>

        <table class="table-bordered table-striped table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Enabled</th>
                    <td>{{ user.enabled }}</td>
                </tr>
                <tr>
                    <th>Lastlogin</th>
                    <td>{{ user.lastLogin|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Locked</th>
                    <td>{{ user.locked }}</td>
                </tr>
                <tr>
                    <th>Expired</th>
                    <td>{{ user.expired }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        <ul class="list">
                            {%for role in user.roles %}
                                <li>{{role}}</li>
                            {%endfor%}
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Credentialsexpired</th>
                    <td>{{ user.credentialsExpired }}</td>
                </tr>
            </tbody>
        </table>
        <br><br>
        <ul>
            <li>
                <a href="{{ path('user_index') }}" class="button button-rounded">Back to the list</a>
                <a href="{{ path('user_edit', { 'id': user.id }) }}" class="button button-rounded">Edit</a>
            </li>
            <br>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" class="button button-border button-rounded button-primary" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
